<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:elevation="10dp"
        >

        <ImageView
            android:id="@+id/ic_search"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_search"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/txtSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ic_search"
            android:background="@null"
            android:hint="Enter a location you want to visit..."
            android:imeOptions="actionSearch"
            android:textColor="@color/black"
            android:textSize="15sp" />


    </RelativeLayout>

    <Button
    android:id="@+id/current_user_location"
    android:layout_width="128dp"
    android:layout_height="98dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="1dp"
    android:layout_marginBottom="148dp"
    android:text="My Current Location"/>


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <RelativeLayout
        android:id="@+id/relative_layout_button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:id="@+id/button_background"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/ic_action_button_background">
<!--            android:padding="20dp">-->

            <ImageView
                android:id="@+id/button_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_action_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"/>
<!--                android:padding="20dp"-->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_icon"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Add"
                android:textColor="@color/white"
                android:textSize="27sp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>